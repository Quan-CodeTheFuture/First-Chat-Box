extend ../layouts/common.pug
block content
    .m-5
        h1 Login
        if errors
            each error in errors
                .alert.alert-danger= error

        form(action="/auth/login",method="POST")
            .form-group
                label.font-weight-bolder(for='username') Username
                input#username.form-control(type="text" name="username" value= values ? values.username : '')

            .form-group
                label.font-weight-bolder(for='password') Password
                input#password.form-control(type='text' name="password" value= values ? values.password : '')
            button.btn.btn-primary Login